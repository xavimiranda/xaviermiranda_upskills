@model IEnumerable<Nucleo> 

<h2>Nucleos</h2>
<table class="table table-striped table">
    <thead>
        <tr>
            <th scope="col">Nucleo</th>
            <th scope="col">Morada</th>
            <th scope="col">Gerir Obras</th>
            <th scope="col">Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var nucleo in Model)
        {
            <tr>
                <td>@nucleo.Nome</td>
                <td>@nucleo.Morada</td>
                <td><a class="btn btn-sm btn-outline-primary" asp-action="Obras" asp-route-id="@nucleo.Id">Gerir Obras</a></td>
                <td><a class="btn btn-sm btn-danger" asp-action="Remove" asp-route-id="@nucleo.Id">Remover</a><td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="Create">Adicionar um núcleo</a>