@model CreateAutorViewModel

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<form method="post">
    <input type="hidden" asp-for="RedirectUrl" value="@Model.RedirectUrl" />


    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span class="text-danger" asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nascimento"></label>
        <input asp-for="Nascimento" class="form-control" />
        <span class="text-danger" asp-validation-for="Nascimento"></span>
    </div>

    <div class="form-group">
        <label asp-for="Obito"></label>
        <input asp-for="Obito" class="form-control" />
        <span class="text-danger" asp-validation-for="Obito"></span>
    </div>

    <button class="btn btn-primary" type="submit">Criar</button>
    <a class="btn btn-outline-secondary" href="@Model.RedirectUrl">Voltar</a>
</form>