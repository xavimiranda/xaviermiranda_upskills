@model ObrasCreateViewModel

<h2>Nova obra</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="@Model.Obra.Titulo">Titulo</label>
        <input asp-for="@Model.Obra.Titulo" class="form-control" />
        <span asp-validation-for="@Model.Obra.Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Obra.AnoPublicação">Ano de Publicação</label>
        <input asp-for="@Model.Obra.AnoPublicação" class="form-control" />
        <span asp-validation-for="@Model.Obra.AnoPublicação" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Obra.Imagem">Imagem</label>
        <input asp-for="@Model.Obra.Imagem" class="form-control" />
    </div>
    <div class="form-row">

        <div class="form-group">
            <div class="col">
                <label asp-for="@Model.Obra.Isbn10">ISBN10</label>
                <input asp-for="@Model.Obra.Isbn10" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col">
                <label asp-for="@Model.Obra.Isbn13">ISBN13</label>
                <input asp-for="@Model.Obra.Isbn13" class="form-control" />

            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ClassificacaoId">Classificação</label>
        <select asp-for="@Model.ClassificacaoId" asp-items="@Model.Classificacoes"></select>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>